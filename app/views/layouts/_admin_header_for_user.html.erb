<header class="topbar">
    <div class="container-fluid topbar-wrap">
        <div class="global-nav">
            <div class="dropdown">
                <a href="#" class="global_nav_toggle" data-toggle="dropdown"><%= change_menu_title(controller_name)%></a>

                <ul class="trainer-apps dropdown-menu dd_tip_left">
                    <li>
                        <%= link_to trainer_dashboard_index_path(user: params[:user]), class: "home" do %>
                            <span></span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to libraries_path(user: params[:user]), class: "fitness-library", "data-no-turbolink" => 'true' do %>
                            <span></span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to new_workout_path(user: params[:user]), class: "workout-builder", "data-no-turbolink" => 'true' do %>
                            <span></span>
                        <% end %>
                    </li>
                    <% if current_user.admin? %>
                        <li>
                            <%= link_to discover_path(user: params[:user]), class: "discover", "data-no-turbolink" => 'true' do %>
                                <span></span>
                            <% end %>
                        </li>
                    <% end %>
                    <li>
                        <%= link_to "facebook.com/groups/xerofit.trainers.beta", class: "support" do %>
                            <span></span>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to "javascript:void(0)", class: "performance" do %>
                            <span></span>
                            <img class="coming-soon-banner" src="/assets/icons/coming_soon_banner.png" />
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>

        <div class="topbar_logo">
          <a id="xerofit_logo" href="/admin"></a>
        </div>

        <div class="utility_menu">
            <div class="notification_dropdown dropdown">
                <a href="javascript:void(0)" class="notification_menu_toggle" data-toggle="dropdown"></a>
                <ul class="notification_menu_dropdown dropdown-menu dd_tip_center">
                    <li><a href="javascript:void(0)">No new notifications</a></li>
                </ul>
            </div>

            <div class="utility_dropdown dropdown">
                <a href="javascript:void(0)" class="utility_menu_toggle" data-toggle="dropdown">
                    <%if @user.present? && @user.pic.present?%>
                        <%= image_tag @user.pic.url(:medium), class: "profile_image" %>
                    <%else%>
                        <img src="/assets/user_img.png" />
                    <%end%>
                    <span class="user_name"><%=@user.present? ? @user.fullname : current_user.fullname%></span>
                </a>
                <ul class="utility_menu_dropdown dropdown-menu dropdown-menu-right dd_tip_right">
                    <li>
                        <%=link_to "Settings", settings_path(user: params[:user]), html_options: {"data-no-turbolink" => true}%>
                    </li>
                    <li>
                        <%=link_to "Admin Dashboard", '/admin'%>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>