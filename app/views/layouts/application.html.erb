<!DOCTYPE html>
<html>
<head>
  <title>Xerofit</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= javascript_include_tag "application", "/assets/plugins/jquery.dropkick.min", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v1/" %>
  <%#= render :partial => 'website/headscripts/google_analytics' %>
  
  <link rel="stylesheet" type="text/css" href="//cloud.typography.com/636428/615064/css/fonts.css" />
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%#= stylesheet_link_tag "/assets/jcrop.min", media: "all", "data-turbolinks-track" => true %>
  <%#= javascript_include_tag "/assets/plugins/jquery.jcrop.min", "data-turbolinks-track" => true %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= csrf_meta_tags %>
</head>
	<body>
    <div id="<%= "#{controller_name}_#{action_name}" -%>" class="wrapper">
        <%=render "layouts/header"%>
        <div class="content">
          <%= yield %>
        </div>
        <%=render "layouts/footer"%>
		</div>
  </body>
</html>

