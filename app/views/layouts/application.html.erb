<!DOCTYPE html>
<html>
<head>
  <title>Xerofit</title>
   <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v1/" %>
	<%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
  <%= csrf_meta_tags %>
</head>
		<% if @use_default_layout %>
  		<%= stylesheet_link_tag "css/application", media: "all", "data-turbolinks-track" => true %>
  			<% if !current_user.present? %>
			<%# if controller_name == "home" && action_name == "index" %>
				<body class="home_bg size">
			<% else %>
				<body>
			<% end %>
				<div id="page_wrapper">
			    	<%=render "layouts/header"%>
					<%= yield %>
					<%=render "layouts/footer"%>
				</div>
			</body>
		<% else %>
			<%= stylesheet_link_tag "admin/application", media: "all", "data-turbolinks-track" => true %>
			<body>
				<%= render partial: 'layouts/admin_header' %>
				<div class="container">
    			<div class="row">
						<%= render partial: 'layouts/admin_menu' %>
						<div class="col-md-9">
			        <%= yield %>
			        </br>
			        </br>
			        </div>
			      <% end %>
			    </div>
			  </div>
      </body>
</html>



