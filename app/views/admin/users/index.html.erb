<div class="col-md-12">
  <div class="col-md-9">
    <a href="<%= admin_users_path %>">
      <strong>
        <i class="glyphicon glyphicon-th-list"></i> Users List
      </strong>
    </a> 
  </div> 
  <div class="col-md-3">
    <%=link_to new_admin_user_path do%>
      <strong>
        <i class="glyphicon glyphicon-plus"></i>
         New User
      </strong>
    <%end%> 
  </div>
</div>
<hr>
<%#= render "/admin/moves/admin_index" %>
<div class="col-md-9 search_user">
    <table class="table table-bordered table-striped">
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Registered</th>
        <th>Action</th>
      </tr>
      <% @users.each_with_index do |user, ind| %>
        <%#ind += 1%>
        <tr>
          <td><%=user.id%></td>
          <td><%=user.email%></td>
          <td><%=user.first_name%></td>
          <td><%=user.last_name%></td>
          <td><%=user.created_at%></td>
          <td>
            <!-- <%#=link_to "View Libraries", libraries_path(id: user.token) %> | -->
             <%=link_to "Edit", edit_admin_user_path(user)%> | <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }%>
          </td>
        </tr>
      <% end %>
    </table>
</div>
<div class="col-md-3">
  <%= form_tag(filter_user_admin_users_path, remote: true, method: "get", id: "filter_user_form") do |f|%>
    <table class="table table-bordered table-striped">
      <tr>
        <th colspan="2">Filters</th>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= text_field_tag :email,"",class: "form-control input-wid usr_flter" %></td>
      </tr>
      <tr>
        <th>Role</th>
        <td><%= select_tag :role, options_for_select(User::ROLES), prompt: "Select Role", class: "form-control input-wid usr_flter" %></td>
      </tr>
      <tr>
        <th colspan="2"><%= submit_tag "Search", class: "btn btn-primary submit_form" %></th>
      </tr>
    </table>
  <% end %>
</div>

<script>
  $('.admin_li').removeClass('active');
  $('.admin_li.users').addClass('active');
</script>