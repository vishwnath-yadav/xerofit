<table class="table table-bordered table-striped">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Content Type</th>
    <th>Date Submitted for Approval</th>
    <th>Status</th>
    <th>User Email</th> 
    <th>Actions</th>
  </tr>
  <% if @moves.present? %>
    <% @moves.each do |move| %>
      <tr>
        <td><%=move.id%></td>
        <td><%=move.title%></td>
        <td><%=move.move_type%></td>
        <td><%=move.date_submitted_for_approval%></td>
        <td>
          <%=render "common_templates/change_status", move: move%>
        </td>
        <td><%=move.user.email %></td>
        <td>
          <%if move.move_type == Move::TYPE[0]%>
            <%=link_to "View", edit_path(move, user: move.user.token)%> | 
          <%else%>
            <%=link_to "View", edit_workout_path(move, user: move.user.token)%> | 
          <%end%>
          <%=link_to "Send email", "javascript:void(0)", "data-toggle" => "modal", "data-target"=>"#approve_mail_popup", class: "send_approve_mail", data_attr: "#{move.id}_#{move.move_type}" %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr><td colspan="7"> No Record Found....</td></tr>
  <% end %>
</table>