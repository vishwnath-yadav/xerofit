<div class="middle_wrapper">
  <div class="popup_wrapper">
    <div class="popup_header">
      <h2>Sign In to Xerofit</h2>

      <p>Don't have an account yet? <a href="combo_signup.html">Sign in here</a>.</p>
    </div>
    <div class="popp_middle">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="login_field">
            <%= f.input :email, required: false, autofocus: true %>
          </div>

          <div class="login_field">
            <%= f.input :password, required: false %>

          </div>
          <%= f.button :submit, "Sign in", :class=>"signin_btn" %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <span class="lost_pass_txt">Lost Password?
              <%= link_to "Reset it", new_password_path(resource_name) %>
            </span>
          <% end -%>
      <% end %>
    </div>
  </div>
</div>

