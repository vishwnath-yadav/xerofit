<div class="workout_col_rght">
	<div class="move_detail">DETAILS</div>
    	<div class="detail_form">
            <%= simple_form_for(@workout, url: workout_builders_path) do |f| %>
            	<div class="form_field">
                    <%= f.input :name, required: true, input_html: { class: "detail_input" } %>
                	<!-- <label>Name:</label>
                    <input name="" type="text" class="detail_input"/> -->
                    <span class="detail_char">26/50 Character</span>
                </div>
                <div class="form_field">
                    <%= f.input :subtitle, as: :text, required: true, input_html: { class: "detail_msg" } %>
                	<!-- <label>Subtitle:</label>
                    <textarea name="" cols="" rows="3" class="detail_msg"></textarea> -->
                    <span class="detail_char">0/50 Character</span>
                </div>
                <div class="form_field">
                    <%= f.input :description, as: :text, input_html: { class: "detail_msg" } %>
                	<!-- <label>Description:</label>
                    <textarea name="" cols="" rows="6" class="detail_msg"></textarea> -->
                    <span class="detail_char">0/450 Character</span>
                </div>
                <div>
                    <%= f.button :submit, "Save", :class=>"signin_btn request_bt" %>
                    <!-- <input type="submit" name="Save" value="Save"> -->
                </div>
            <% end %>
        </div>
    </div>
</div>