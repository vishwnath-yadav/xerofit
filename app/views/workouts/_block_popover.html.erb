<!--div class="head hide">Block Details</div-->

<div class="block-pop-content">
    <div id="sets" class="input-section">
        <h5>Sets</h5>
        <div class="number-input-wrap lib_detail_popup">
            <input id="moves_sets" class="sets_by_popup" max="10" min="1" name="sets_count" step="1" type="number" value="1" data-block-id="<%= @block.id%>">
            <label>Total</label>
        </div>
    </div>
    <div id="rest" class="input-section last">
        <h5>Rest</h5>
        <div class="number-input-wrap lib_detail_popup" >
            <input id="moves_rests" class="sets_by_popup" max="180" min="0" name="rest_time" step="15" type="number" value="30" data-block-id="<%= @block.id%>">
            <label>Seconds</label>
        </div>
    </div>
    <a href="javascript:void(0)" id="block_remove_<%= @block.id %>" class="delete-block-btn"></a>
</div>