<script type="text/javascript">
    $(document).ready(function(){
        var setElementHeight = function () {

            // Calculate Height Workout Builder
            var height = $(window).height();
            var topbarHeight = $('.topbar').outerHeight();
            var controlBarHeight = $('.control_bar').outerHeight();
            var buttonHeaderHeight = $('.workout-builder .details_page_header').outerHeight();
            var offsetHeight = height + topbarHeight + controlBarHeight;

            // Calculate Height of workout preview dropzone block
            var workoutBlocksHeader = $('#workout-blocks').outerHeight();
            var dropzoneOffsetHeight = buttonHeaderHeight + workoutBlocksHeader + 39;


            // Set the Height and Min-Heights
            $('.autoheight').css({'height': (height - buttonHeaderHeight)+'px'})
            $('.workout-list').css({'min-height': (height - dropzoneOffsetHeight)+'px'})
        };


        var setElementWidth = function () {
            var width = $(window).width();
            var leftColumnWidth = $('.builder .column.split-left').outerWidth();
            var rightColumn = $('.builder .column.split-right');

            rightColumn.css({'width': (width - leftColumnWidth)+'px'})
        };

        $(window).on('resize', function () {
            setElementHeight();
            setElementWidth();
        }).resize();
    });
</script>