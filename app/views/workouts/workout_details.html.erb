<div class="rght_btns">
  <a href="javascript:void(0)" class="cancel_btn rht_active" >Save</a>
  <a href="javascript:void(0)" class="cancel_btn rht_active" >Submit for review</a>
</div>
<div class="libray_detail">
  <%= simple_nested_form_for(@workouts, url: (library_path(@workouts)), html: {id: 'edit_video_info'}) do |lib| %>
    <div class="exer_rht_col">
      <div style="color:red;">
        <% if @workouts.errors.full_messages.any? %>
          <ul>
            <% @workouts.errors.full_messages.each do |error_message| %>
              <li><%= error_message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <%= hidden_field_tag :video, "#{@video_id.present? ? @video_id : ''}", class: "video_id" %>
      <%= hidden_field_tag :image, "", class: "image_url" %>
      <%= hidden_field_tag :status_change, "", class: "status" %>
      <div class="lib_des_lft">
        <div class="exr_field_col">
          <label>Title</label>
          <%= lib.text_field :name %>
        </div>
        <div class="exr_field_col">
          <label>Subtitle</label>
          <%= lib.text_field :subtitle %>
        </div>
        <div class="exr_field_col">
          <label>Category</label>
          <%= text_field_tag :category %>
        </div>
      </div>
      <div class="lib_des_rht">
          <div class="exr_field_col">
            <label>Discription</label>
            <%= lib.text_area :description %>
          </div>
      </div>
    </div>
  <% end %>
  <hr>
  <div class="exer_lft_col">
    <!-- <img src="/assets/video_img.png" width="586" height="330" alt="Video" />  -->
    <%#= image_tag(@user.video_url) if @user.avatar? %>
    <h4>Workout Media</h4>
    <div class="big_video_col">
       <h5>Cover Image</h5>
       <p>For best results, your image should be square and atleast 500px by 500px</p>
    
  </div>

    <div class="thumbnail_col">
      <div class="lib_edit_botom">
        <h5>Remove Workout</h5>
        <p>Permanently remove the workout from xerofit. Proceed with caution, this action cann't be undone!</p>
        <%=link_to "Remove this Workout","", :class => "remove_video_btn"%>
    </div>
    </div>
    
</div>
  