<% if @move.present? %>
  <ul>
    <% @move.each_with_index do |mov, index| %>
      <li class="<%= (mov.move_type!=Move::TYPE[1]) ? 'wdth_img' : ''%> <%= cycle("first_row border_left", "first_row", "first_row", "first_row border_right", "border_left", "", "", "border_right", "last_row border_left", "last_row", "last_row", "last_row border_right" )%>">
        <% if mov.move_type == Move::TYPE[1] %>
          <a href="<%= params[:user].blank? ? workout_details_path(mov) : workout_details_path(mov, user: params[:user])%>" data-no-turbolink="true" class="grid_block workout">
            <% if mov.pic.present? %>
              <img src="<%= mov.pic.url(:w_square) %>" alt="cn_1" />
            <% else %>
              <img src="/assets/ex_1.png" alt="cn_1" />
            <%end%>
            <h6 title="<%= mov.title %>"><%= truncate(mov.title, :length => 24, :seperator => ' ...') %></h6>
            <p class="block_status">
              <img src="<%= status_icon(mov.status)%>" class="list_view_circle" />
              <%= mov.status %>
            </p>
          </a>
        <%else%>
          <a href="<%= params[:user].blank? ? edit_path(mov) :  edit_path(mov, user: params[:user])%>" data-no-turbolink="true" class="grid_block move">
            <% if mov.check_thumbnail() %>
              <img src="<%= mov.library_video.image %>" alt="cn_1" />
            <% else %>
              <img src="/assets/ex_2.png" alt="cn_1" />
            <%end%>
            <h6 title="<%= mov.title %>"><%= truncate(mov.title, :length => 24, :seperator => ' ...') %></h6>
            <p class="block_status">
              <img src="<%= status_icon(mov.status)%>" class="list_view_circle" />
              <%= mov.status %>
            </p>
          </a>
        <%end%>
      </li>
    <% end %>
  </ul>

<% else %>
  <div class="empty-library">
    <h3>Your Fitness Library is empty!</h3>
    <span>Click the blue plus icon to start adding content.</span>
  </div>
<% end %>

<%= paginate @move, remote: true %>
