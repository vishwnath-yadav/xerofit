<div class="create_heading">
    <div class="plus_icon">
      <a href="/libraries/new">
        <img src="/assets/plus_icon.png"/>
      </a>
      <div class="hover_box">
      <a href="/libraries/new">Add New</a> 
    </div>
    </div>
      
    <div class="search_bar_col">
      <!-- <input id= "search_lib_by_name" type="text" placeholder="Search"> -->
      <%= autocomplete_field_tag 'title', '', autocomplete_library_title_libraries_path, :class => "search_icon", :placeholder=>"Search", :id => "search_lib_by_name" %>
      <input type="button" class="search_btn" id="lib_name_for_search">
    </div>

    <div class="select_bar_col">
      <%= form_tag(get_lib_items_libraries_path, remote: true, method: "post", id: "search_grid_list_form") do |f|%>
         <%= hidden_field_tag :select_option%>
         <%= hidden_field_tag :view_type%>
         
         <div class="custom_select_wrap">
          <span class="custom_select">
            <select class="default">
              <option>Fun & Bizarre</option>
              <option>Online Marketing</option>
              <option>Graphics & Design</option>
            </select>
          </span>
        </div>
        <div class="custom_select_wrap">
            <span class="custom_select status_select">
              <select class="default">
                <option class="green_icon">Fun & Bizarre</option>
                <option>Online Marketing</option>
                <option>Graphics & Design</option>
              </select>
        </div>
         <%#= select_tag "select_type", options_for_select(Library::STATUS), class: "sel_opt", prompt: "All Type", "data-name"=> "sel_type" %>
         <%#= select_tag "select_status", options_for_select(Library::TYPE ),class: "sel_opt", prompt: "All Status", "data-name"=> "sel_status" %>
        <span class="grid_icon grid_icon_active grid_pointer view_type" data-name="grid" id="grid_view">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
        <span class="list_icon view_type grid_pointer"  data-name="list" id="list_view">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>

      <%end%>
    </div>
</div>
<div class="middle_wrapper">
	<div class="dashboard_mid">
    <div class="library_col  library_view">
      <%= render "list" %>
    </div>
			
      <%#= will_paginate @libraries, :remote=>true, :next_label => 'Next', :previous_label => 'Previous', :inner_window=>0, :outer_windows=>0 %>
       <%= paginate @libraries, :window => 2%>
    <!-- <div class="pagination">
     </div>-->

  </div>
</div>
<div class="create_heading pad20">
  
</div>

<script>
$(function (){  
  $('.sort_select').on('change', function(){
    var v= $(this).val();
   $.ajax({
    type: "GET",
    url: "/libraries/sort_video?val=" + v
   });
  });
}); 
</script>