<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <span class="error-messages">
            <% resource.errors.full_messages.each do |object| %>
                <%= object %></br>
            <% end %>
    </span>
    <div class="input-field-wrap fname">
        <label>First Name:</label>
        <%= f.input :first_name, label: false, required: true %>
    </div>
    <div class="input-field-wrap lname">
        <label>Last Name:</label>
        <%= f.input :last_name, label: false, required: true %>
    </div>
    <%= f.hidden_field :role, value: "trainer" %>
    <div class="input-field-wrap">
        <label>Email:</label>
        <%= f.input :email, label: false, required: true, autofocus: true %>
    </div>

    <div class="input-field-wrap">
        <label>Password:</label>
        <%= f.input :password, label: false, required: true %>
    </div>
    <%= f.button :submit, "Create Account", :class=>"login-btn" %>
    <span class="btn-footnote">
        You agree to Xerofit's <a href="http://www.xerofit.com/terms">Terms</a> and <a href="http://www.xerofit.com/privacy">Privacy</a>.
    </span>
<% end %>