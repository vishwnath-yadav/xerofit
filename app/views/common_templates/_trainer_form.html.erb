<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <span class="error_color">
      <% resource.errors.full_messages.each do |object| %>
        <%= object %></br>
      <% end %>
  </span>
  <div class="login_field">
    <label>First Name:</label>
    <%= f.input :first_name, label: false, required: true %>
  </div>
  <div class="login_field">
    <label>Last Name:</label>
    <%= f.input :last_name, label: false, required: true %>
  </div>
  <%= f.hidden_field :role, value: "trainer" %>
  <div class="login_field">
    <label>Email:</label>
    <%= f.input :email, label: false, required: true, autofocus: true %>
  </div>
  
  <div class="login_field">
    <label>Password:</label>
    <%= f.input :password, label: false, required: true %>
  </div>
  
  <span class="lost_pass_txt">You agree to Xerofit's <a href="#">Terms</a> and <a href="#">Privacy Policy</a>.
  </span>
  
  <%= f.button :submit, "Create Account", :class=>"signin_btn mar_bot_zero" %>
<%end%>